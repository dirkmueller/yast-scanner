/**
 * File:	clients/scanner_auto.ycp
 * Package:	Configuration of scanner
 * Summary:	Client for autoinstallation
 * Authors:	Jiri Srain <jsrain@suse.cz>
 *
 * $Id$
 *
 * This is a client for autoinstallation. It takes its arguments,
 * goes through the configuration and return the setting.
 * Does not do any changes to the configuration.
 */

/**
 * @param function to execute
 * @param map/list of scanner settings
 * @return map edited settings, Summary or boolean on success depending on called function
 * @example map mm = $[ "FAIL_DELAY" : "77" ];
 * @example map ret = WFM::CallFunction ("scanner_auto", [ "Summary", mm ]);
 */

{

textdomain "scanner";

y2milestone("----------------------------------------");
y2milestone("Scanner auto started");

import "Scanner";
include "scanner/wizards.ycp";

any ret = nil;
string func = "";
map param = $[];

/* Check arguments */
if(size(WFM::Args()) > 0 && is(WFM::Args(0), string)) {
    func = (string)WFM::Args(0);
    if(size(WFM::Args()) > 1 && is(WFM::Args(1), map))
	param = (map) WFM::Args(1);
}
y2debug("func=%1", func);
y2debug("param=%1", param);

/* Create a summary*/
if(func == "Summary") {
    ret = select(Scanner::Summary(), 0, "");
}
/* Reset configuration */
else if (func == "Reset") {
    Scanner::Import($[]);
    ret = $[];
}
/* Change configuration (run AutoSequence) */
else if (func == "Change") {
    ret = ScannerAutoSequence();
}
/* Import configuration */
else if (func == "Import") {
    ret = Scanner::Import(param);
}
/* Return actual state */
else if (func == "Export") {
    ret = Scanner::Export();
}
/* Return needed packages */
else if (func == "Packages") {
    ret = Scanner::AutoPackages();
}
/* Read current state */
else if (func == "Read") {
    import "Progress";
    Progress::off();
    ret = Scanner::Read();
    Progress::on();
}
/* Write givven settings */
else if (func == "Write") {
    import "Progress";
    Progress::off();
    Scanner::write_only = true;
    ret = Scanner::Write();
    Progress::on();
}
/* Unknown function */
else {
    y2error("Unknown function: %1", func);
    ret = false;
}

y2debug("ret=%1", ret);
y2milestone("Scanner auto finished");
y2milestone("----------------------------------------");

return ret;

/* EOF */
}
